@model IEnumerable<SuncereDataCenter.Model.SuncereUser>
@{
    ViewBag.Title = "UserList";
}

<h3 class="page-header">查询</h3>
<form class="form-inline" role="form">
    <div class="form-group">
        <label class="control-label" for="keyword">关键字：</label>
        <input type="text" class="form-control" id="keyword" name="keyword" placeholder="请输入关键字">
    </div>
    <button type="submit" class="btn btn-primary">查询</button>
</form>
<h3 class="page-header">表格</h3>
<p>
    @Html.ActionLink("新增", "UserAdd", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>账号</th>
        <th>名称</th>
        <th>Email</th>
        <th>手机</th>
        <th>状态</th>
        <th>最新登录时间</th>
        <th>最新登录IP</th>
        <th>IP</th>
        <th>绑定IP</th>
        <th>备注</th>
        <th>操作</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @(item.Status ? "启用" : "关闭")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLoginTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLoginIP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IP)
            </td>
            <td>
                @(item.EnableIPBinding ? "启用" : "关闭")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("详情", "UserDetails", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                @if (!item.Static)
                {
                    @Html.ActionLink("编辑", "UserEdit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("删除", "UserDelete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                }
            </td>
        </tr>
    }
</table>