@model SuncereDataCenter.Model.SuncereRole

@{
    ViewBag.Title = "RoleEdit";
}

<h3 class="page-header">编辑</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">名称</label>
            <div class="col-md-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Status">状态</label>
            <div class="col-md-10">
                <label class="radio-inline">
                    <input type="radio" name="Status" value="true" @(Model.Status ? "checked" : "")> 启用
                </label>
                <label class="radio-inline">
                    <input type="radio" name="Status" value="false" @(Model.Status ? "" : "checked")> 关闭
                </label>
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Remark">备注</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-primary" />
                @Html.ActionLink("返回", "RoleList", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
