@model IEnumerable<SuncereDataCenter.Model.SuncereRole>
@{
    ViewBag.Title = "UserRoles";
}

<h3 class="page-header">表格</h3>
<p>
    @Html.ActionLink("新增", "UserRoleAdd", new { userId = ViewBag.UserId }, new { @class = "btn btn-success" })
    @Html.ActionLink("返回", "UserList", null, new { @class = "btn btn-default" })
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>名称</th>
            <th>状态</th>
            <th>备注</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @(item.Status ? "启用" : "关闭")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
                <td>
                    @Html.ActionLink("删除", "UserRoleDelete", new { userId = ViewBag.UserId, id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>